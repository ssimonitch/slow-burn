{
  "name": "slow-burn",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter app dev",
    "lint": "pnpm --filter app lint",
    "typecheck": "pnpm --filter app typecheck",
    "test": "pnpm --filter app test",
    "check": "pnpm --filter app lint --fix && pnpm --filter app typecheck && pnpm --filter app test",
    "supabase:types": "supabase gen types typescript --local --schema public > packages/app/src/services/supabase/types.gen.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
